definicion:
    const_numero = 4
    //const_numero = 5
    const_numero2 = 2


inicio:
    num var_paulo = -100; //Esto es un comentario
    num var_londro = 3;
    num var_mientras = 1;
    letras var_p = "hila";
    var_londro = 2 + 2;
    var_londro += 3;
    var_londro := var_paulo;
   // var_londro := var_p;
    var_londro = var_paulo + var_londro;
    si (var_paulo < 2) inicio sentencia
        var_londro +=1;
        imprimir("estoy adentro del if\n");
    terminar
    mientras (var_mientras < 5) inicio sentencia
        imprimirln("adentro del mientras");
        var_mientras += 1;
    terminar
    letras var_txt = "hola";
    letras var_txt2 = " rey";
    //var_txt := 2;
    imprimirln("hola\n");
    imprimir(var_londro);
    imprimirln(var_txt);
    imprimir ("CONCANT");
    letras var_vacia = "a";
    concatenar(var_vacia ,"hola");
    imprimirln(var_vacia);
    concatenar(var_txt2 ,var_txt2);
    concatenar(var_txt ,var_txt2);
    concatenar(var_txt ,"chiao");
    imprimirln("Inserte palabra:");
    leer(var_txt);
    imprimir("Palabra: ");
    imprimirln(var_txt);
    imprimirln("Inserte numero:");
    leer(var_londro);
    imprimir("Numero: ");
    var_londro += 1;
